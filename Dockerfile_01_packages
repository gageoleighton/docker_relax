#ENV DEBIAN_FRONTEND=noninteractive
#ENV BUILD_PACKAGES="$BUILD_PACKAGES mesa-utils x11-apps xserver-xorg-core xorg"
#ENV BUILD_PACKAGES="$BUILD_PACKAGES nvidia-340"

################################
# Don't use this in either case.
################################
